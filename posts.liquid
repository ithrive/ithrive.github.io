---
layout: default
title: 'Latest news'
permalink: "/posts/"
---

<div class="container postListing">
  <h1 class="postListing_heading">News and interest pieces</h1>
  <div class="postListing_posts">
    <div class="row">
      <div class="col col-sm-8 col-sm-offset-2">
        {% for post in paginator.posts %}
          {% include post-preview-listing.html post=post %}
        {% endfor %}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col col-sm-12">
      {% if paginator.total_pages > 1 %}
        <ul class="pagination pagination-sm">
          {% if paginator.previous_page %}
            <li><a href="{{ paginator.previous_page_path }}">&laquo;</a></li>
          {% else %}
            <li class="disabled"><a href="#">&laquo;</a></li>
          {% endif %}

          {% for page in (1..paginator.total_pages) %}
            {% if page == paginator.page %}
              <li class="active"><a href="#">{{ page }}</a></li>
            {% elsif page == 1 %}
              <li><a href="{{ paginator.previous_page_path | prepend: site.baseurl | replace: '//', '/' }}">{{ page }}</a></li>
            {% else %}
              <li><a href="{{ site.paginate_path | prepend: site.baseurl | replace: '//', '/' | replace: ':num', page }}">{{ page }}</a></li>
            {% endif %}
          {% endfor %}
          
          {% if paginator.next_page %}
            <li><a href="{{ paginator.next_page_path }}">&laquo;</a></li>
          {% else %}
            <li class="disabled"><a href="#">&laquo;</a></li>
          {% endif %}
        </ul>
      {% endif %}
    </div>
  </div>
</div>
